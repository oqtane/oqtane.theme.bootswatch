@namespace Oqtane.Theme.Bootswatch.Vapor
@inherits Oqtane.Theme.Bootswatch.Default.Default

@{ 
    base.BuildRenderTree(__builder); 
}

@code {

    public override List<Resource> Resources => GetResources();

    private List<Resource> GetResources()
    {
        var resources = base.Resources;
        resources[0] = new Resource
            {
                ResourceType = ResourceType.Stylesheet,
                Url = "https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.3/vapor/bootstrap.min.css",
                Integrity = "sha512-9LoG2EQdcmuEQpzkslqa3whcL8LM+7GGPsW2MK1gRlmiML0G7M5ZPj2aZaW2DyixslBfZoy4kANfP/MYWDCSiw==",
                CrossOrigin = "anonymous"
            };
        resources[1] = new Resource { ResourceType = ResourceType.Stylesheet, Url = ThemePath().Replace(".Vapor/", "/Theme.css") };
        resources[2] = new Resource { ResourceType = ResourceType.Stylesheet, Url = ThemePath().Replace(".Vapor/", "/Vapor.css") };
        return resources;
    }
}