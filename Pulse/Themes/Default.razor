@namespace Oqtane.Theme.Bootswatch.Pulse
@inherits Oqtane.Theme.Bootswatch.Default.Default

@{ 
    base.BuildRenderTree(__builder); 
}

@code {

    public override List<Resource> Resources => GetResources();

    private List<Resource> GetResources()
    {
        var resources = base.Resources;
        resources[0] = new Resource
            {
                ResourceType = ResourceType.Stylesheet,
                Url = "https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.3/pulse/bootstrap.min.css",
                Integrity = "sha512-obkkQCe89/FCOU2KW0b5uQy371PYlf2myYmsVb9EaDeI2t+ZtSec+uSA8HdHFiiNfcLWA8p+nRM3WSHrQKpwuA==",
                CrossOrigin = "anonymous"
            };
        resources[1] = new Resource { ResourceType = ResourceType.Stylesheet, Url = ThemePath().Replace(".Pulse/", "/Theme.css") };
        resources[2] = new Resource { ResourceType = ResourceType.Stylesheet, Url = ThemePath().Replace(".Pulse/", "/Pulse.css") };
        return resources;
    }
}
