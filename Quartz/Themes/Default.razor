@namespace Oqtane.Theme.Bootswatch.Quartz
@inherits Oqtane.Theme.Bootswatch.Default.Default

@{ 
    base.BuildRenderTree(__builder); 
}

@code { 

    public override List<Resource> Resources => GetResources();

    private List<Resource> GetResources()
    {
        var resources = base.Resources;
        resources[0] = new Resource
            {
                ResourceType = ResourceType.Stylesheet,
                Url = "https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.3/quartz/bootstrap.min.css",
                Integrity = "sha512-K+FEHZnRHFnQ6iahLNQUCHNpKDHkrYxHZmzFjOJteRPjBhjLmOgJgGJsIYBDOS1wYxcSVvAcfg3ZFpm6tnbhOA==",
                CrossOrigin = "anonymous"
            };
        resources[1] = new Resource { ResourceType = ResourceType.Stylesheet, Url = ThemePath().Replace(".Quartz/", "/Theme.css") };
        resources[2] = new Resource { ResourceType = ResourceType.Stylesheet, Url = ThemePath().Replace(".Quartz/", "/Quartz.css") };
        return resources;
    }
}